<Window x:Class="QuizAppWpf.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="QuizApp" Height="400" Width="500"
        WindowStartupLocation="CenterScreen">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Label Grid.Row="0" 
               Content="Welcome to QuizApp" 
               FontSize="24" 
               FontWeight="Bold"
               HorizontalAlignment="Center"
               Margin="0,0,0,20"/>

        <StackPanel Grid.Row="1" VerticalAlignment="Center">
            <Label Content="Language:" FontSize="16" Margin="0,0,0,10"/>
            <RadioButton x:Name="EnglishRadio" 
                         Content="English" 
                         IsChecked="True"
                         GroupName="Language"
                         Checked="EnglishRadio_Checked"
                         Margin="20,0,0,10"/>
            <RadioButton x:Name="FrenchRadio" 
                         Content="FranÃ§ais" 
                         GroupName="Language"
                         Checked="FrenchRadio_Checked"
                         Margin="20,0,0,20"/>

            <Label x:Name="UsernameLabel" 
                   Content="Username:" 
                   FontSize="16"
                   Margin="0,0,0,10"/>
            <TextBox x:Name="UsernameTextBox" 
                     FontSize="14" 
                     Height="30"
                     Margin="0,0,0,20"/>
        </StackPanel>

        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Center">
            <Button x:Name="StartButton"
                    Content="Start Quiz" 
                    FontSize="16" 
                    Height="40"
                    Width="150"
                    Margin="0,0,10,0"
                    Click="StartButton_Click"/>
            <Button x:Name="ViewScoresButton"
                    Content="View Scores" 
                    FontSize="16" 
                    Height="40"
                    Width="150"
                    Click="ViewScoresButton_Click"/>
        </StackPanel>
    </Grid>
</Window>
