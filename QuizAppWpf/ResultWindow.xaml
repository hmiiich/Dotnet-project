<Window x:Class="QuizAppWpf.ResultWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Results" Height="400" Width="500"
        WindowStartupLocation="CenterScreen">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Label x:Name="TitleText" 
               Grid.Row="0"
               Content="Quiz Complete!" 
               FontSize="24" 
               FontWeight="Bold"
               HorizontalAlignment="Center"
               Margin="0,0,0,20"/>

        <StackPanel Grid.Row="1" VerticalAlignment="Center">
            <Label x:Name="ScoreText" 
                   FontSize="20" 
                   FontWeight="Bold"
                   HorizontalAlignment="Center"
                   Margin="0,0,0,10"/>
            <Label x:Name="CategoryText" 
                   FontSize="16" 
                   HorizontalAlignment="Center"
                   Margin="0,0,0,10"/>
            <TextBlock x:Name="MessageText" 
                      FontSize="14" 
                      HorizontalAlignment="Center"
                      TextWrapping="Wrap"
                      TextAlignment="Center"/>
        </StackPanel>

        <StackPanel Grid.Row="2" 
                    Orientation="Horizontal" 
                    HorizontalAlignment="Center">
            <Button x:Name="PlayAgainButton"
                    Content="Play Again" 
                    FontSize="16" 
                    Height="35"
                    Width="120"
                    Margin="0,0,10,0"
                    Click="PlayAgainButton_Click"/>
            <Button x:Name="ViewScoresButton"
                    Content="View Scores" 
                    FontSize="16" 
                    Height="35"
                    Width="120"
                    Margin="0,0,10,0"
                    Click="ViewScoresButton_Click"/>
            <Button x:Name="ExitButton"
                    Content="Exit" 
                    FontSize="16" 
                    Height="35"
                    Width="120"
                    Click="ExitButton_Click"/>
        </StackPanel>
    </Grid>
</Window>
