<Window x:Class="QuizAppWpf.QuizWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Quiz" Height="600" Width="700"
        WindowStartupLocation="CenterScreen">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Label x:Name="ProgressText" 
               Grid.Row="0"
               FontSize="16" 
               HorizontalAlignment="Center"
               Margin="0,0,0,10"/>

        <Border Grid.Row="1"
                BorderBrush="Gray"
                BorderThickness="1"
                Padding="15"
                Margin="0,0,0,20"
                Background="White">
            <TextBlock x:Name="QuestionText" 
                       TextWrapping="Wrap"
                       FontSize="18" 
                       FontWeight="Bold"/>
        </Border>

        <StackPanel x:Name="AnswersPanel" Grid.Row="2">
        </StackPanel>

        <Label x:Name="FeedbackText" 
               Grid.Row="3"
               FontSize="16" 
               FontWeight="Bold"
               HorizontalAlignment="Center"
               Margin="0,20,0,0"
               Visibility="Collapsed"/>
    </Grid>
</Window>
