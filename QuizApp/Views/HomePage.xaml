<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="QuizApp.Views.HomePage"
             Title="Choose a Category">
    <VerticalStackLayout Padding="32">
        <Label Text="Choose a Category"
               FontAttributes="Bold"
               FontSize="32"
               HorizontalOptions="Center"
               Margin="0,24,0,24"/>
        <CollectionView ItemsSource="{Binding Categories}"
                        SelectionMode="None">
            <CollectionView.ItemsLayout>
                <GridItemsLayout Orientation="Vertical" Span="2"/>
            </CollectionView.ItemsLayout>
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Frame Margin="8"
                           BackgroundColor="{StaticResource Primary}" CornerRadius="16" HasShadow="True">
                        <Button Text="{Binding}"
                                FontSize="22"
                                Command="{Binding BindingContext.SelectCategoryCommand, Source={x:Reference Name=ParentPage}}"
                                CommandParameter="{Binding}"/>
                    </Frame>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>  
    </VerticalStackLayout>
</ContentPage>
