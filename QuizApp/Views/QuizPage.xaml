<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="QuizApp.Views.QuizPage"
             Title="Quiz">
    <VerticalStackLayout Padding="24" Spacing="18">
        <Label Text="{Binding QuestionNumberText}" FontAttributes="Bold" FontSize="18" HorizontalOptions="Start"/>
        <ProgressBar Progress="{Binding Progress}" HeightRequest="8" BackgroundColor="#E0E0E0" ProgressColor="#1B98F5"/>
        <Label Text="{Binding QuestionText}" FontSize="26" FontAttributes="Bold" Margin="0,20,0,10" LineBreakMode="WordWrap"/>

        <VerticalStackLayout Spacing="12">
            <Button Text="{Binding Answer1}" Command="{Binding AnswerCommand}" CommandParameter="0" StyleClass="AnswerButtonStyle" />
            <Button Text="{Binding Answer2}" Command="{Binding AnswerCommand}" CommandParameter="1" StyleClass="AnswerButtonStyle" />
            <Button Text="{Binding Answer3}" Command="{Binding AnswerCommand}" CommandParameter="2" StyleClass="AnswerButtonStyle" />
            <Button Text="{Binding Answer4}" Command="{Binding AnswerCommand}" CommandParameter="3" StyleClass="AnswerButtonStyle" />
        </VerticalStackLayout>
        <Label Text="{Binding FeedbackText}" FontAttributes="Italic" FontSize="14" TextColor="{Binding FeedbackColor}" IsVisible="{Binding IsFeedbackVisible}"/>
        <Button Text="Next" Command="{Binding NextCommand}" IsVisible="{Binding IsNextVisible}" Margin="0,18,0,0"/>
    </VerticalStackLayout>
</ContentPage>
